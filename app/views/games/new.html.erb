<%= provide(:title, "New Game") %>
<h1>New Game</h1>
<div class="row">
  <div class="col-md-4 col-md-offset-1">
  <%= semantic_form_for(@game) do |f| %>
    <%= f.inputs do %>
    <%= f.input :nick_name %>
    <%= f.input :num_of_players, max: 8, min: 3%>

    <%= f.semantic_fields_for :player do |p| %>
      <%= p.input :icon, max: 99, min: 0%>
      <%end%>
    <%end%>
    <%= f.actions do %>
      <%= f.action :submit, :as => :input %>
    <% end %>

  </div>
<% end %>

  <div class="col-md-7">
    <strong>All Icons:</strong>
    <%= show_all_icons %>
  </div>
</div>
