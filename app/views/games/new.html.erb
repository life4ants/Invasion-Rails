<h1>New Game</h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@game) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

      <%= f.label :nick_name, "Nickname: " %> (optional)
      <%= f.text_field :nick_name, class: 'form-control' %>

      <%= f.label :num_of_players, "Number of players:" %> (3-8)
      <%= f.number_field :num_of_players, class: 'form-control' %>

      <%= f.submit "Create Game", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>